{% block body %}
    {% if is_granted('ROLE_USER') %}
        <div class="form-container form-trick">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <button class="btn">{{ button_label|default('Add a comment') }}</button>
            {{ form_end(form) }}
        </div>
    {% endif %}
<div class="comment-container">
    <h2 class="img-centered">Commentaires</h2>
    {% for comment in trick.comments %}
        <div class="view-comment">
        <div class="author-img">
            <div>
                <h4>{{ comment.author }}</h4>
                <p>{{ comment.dateAdded | date(('d-m-Y h:m')) }}</p>
            </div>
            <img class="profile-picture" src="{{ asset('images/user/admin/monkey-admin.jpeg') }}" alt="monkey-admin">
        </div>
        <div class="text-card comment-text">
            <p>{{ comment.content }}</p>
        </div>
    </div>
    {% else %}
        <h3 class="img-centered">pas de commentaires</h3>
    {% endfor %}
</div>
{% endblock %}



