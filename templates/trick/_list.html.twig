<div class="table-card-container">
    {% for trick in tricks %}
        <div id="{{ trick.id }}" class="card-container js-card">
            <div class="img-card">
                <a class="img-link" href="{{ path('trick_show', {'id': trick.id}) }}">
                    {% for photos in trick.photos %}
                        {% if loop.first %}
                            <img src="{{ asset('images/tricks/'~ photos.folderId ~'/'~ photos.slug) }}" alt="{{ photos.slug }}">
                        {% endif %}
                    {% endfor %}
                </a>
            </div>
            <div class="text-card">
                <a class="card-title" href="{{ path('trick_show', {'id': trick.id}) }}">{{ trick.name }}</a>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('trick_edit', {'id': trick.id}) }}">
                        <div class="edit-icon">âœŽ</div>
                    </a>
                    {{ include('trick/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
</div>
