{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <div class="div-home-title">
        <h3 class="centered-title size-25px">{{ trick.name }}</h3>
    </div>
    <div class="tricks-container">
        <table class="table">
            <tbody>
            <tr>
                <td>
                    {% for photos in trick.photos %}
                        <img src="{{ asset('images/tricks/'~ photos.slug) }}" alt="{{ photos.slug }}">
                    {% endfor %}
                </td>
                <td>
                    {% for videos in trick.videos %}
                        <iframe width="560" height="315" src="{{ videos.slug }}" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td>{{ trick.dateAdded ? trick.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ trick.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>


    <a href="{{ path('home') }}">back to list</a>

    <a href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a>

    {{ include('trick/_delete_form.html.twig') }}
{% endblock %}
