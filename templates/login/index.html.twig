{% extends 'base.html.twig' %}

{% block title %}Se connecter !{% endblock %}

{% block body %}
    {% if error %}
        <div class="centered-title">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <h1 class="centered-title">Se connecter</h1>
    <a href="{{ path('home') }}" class="home-link">Accueil</a>
    <div class=form-login-register>
        <form action="{{ path('login') }}" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password"/>
            <input type="hidden" name="_target_path" value="/"/>
            <button type="submit">Se connecter</button>
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
        </form>
    </div>
{% endblock %}
